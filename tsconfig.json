{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts",
    "src/parser.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 